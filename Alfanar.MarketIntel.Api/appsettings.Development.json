{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "System": "Information"
    }
  },
  "WebSocketsEnabled": "true",
  "ConnectionStrings": {
    "Default": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=MarketIntel_Dev;Integrated Security=True;TrustServerCertificate=True"
  },
  
  "ApiSettings": {
    "MaxIngestBatchSize": 50,
    "DefaultPageSize": 10,
    "MaxPageSize": 50,
    "EnableDuplicateDetection": true,
    "DuplicateCheckWindowDays": 7
  },
  
  "GoogleAI": {
    "ApiKey": "",
    "Model": "gemini-2.5-flash",
    "MaxTokens": 1500,
    "Temperature": 0.3,
    "EnableAiSummarization": true,
    "EnableSentimentAnalysis": true,
    "TimeoutSeconds": 30,
    "EnableCaching": false,
    "EnableStreaming": true,
    "PromptTemplate": {
      "Default": "",
      "Financial": "",
      "Technical": ""
    }
  },

  "OpenAI": {
    "ApiKey": "YOUR_OPENAI_API_KEY_HERE",
    "Model": "gpt-4o-mini",
    "MaxTokens": 1500,
    "Temperature": 0.3,
    "EnableAiCategorization": true,
    "FallbackToRuleBasedClassifier": true,
    "TimeoutSeconds": 30
  },
  
  "GoogleSearch": {
    "ApiKey": "",
    "SearchEngineId": "",
    "MaxResultsPerRequest": 10,
    "EnableCaching": true,
    "CacheExpirationHours": 24
  },

  "NewsApi": {
    "ApiKey": "",
    "EnableCaching": true,
    "CacheExpirationHours": 6
  },

  "KeywordMonitoring": {
    "DefaultCheckIntervalMinutes": 60,
    "MaxMonitorsPerUser": 50,
    "EnableNotifications": false
  },

  "ReportGeneration": {
    "PdfStoragePath": "wwwroot/reports",
    "MaxReportResults": 1000,
    "RetentionDays": 90
  },
  
  "RssFeedManagement": {
    "DefaultPollIntervalMinutes": 5,
    "MaxConcurrentFeeds": 3,
    "RequestTimeoutSeconds": 20,
    "EnableETagSupport": true,
    "UserAgent": "MarketIntelBot-Dev/1.0"
  },
  
  "CategoryClassification": {
    "DefaultCategory": "General",
    "MinimumConfidenceScore": 0.5,
    "EnableMultiCategoryTagging": true,
    "MaxTagsPerArticle": 15
  },
  
  "FileStorage": {
    "BasePath": "storage/reports",
    "MaxFileSizeBytes": 104857600,
    "AllowedExtensions": [".pdf", ".doc", ".docx", ".ppt", ".pptx"],
    "EnableCompression": false
  },
  
  "AzureStorage": {
    "UseAzureBlobStorage": true,
    "ConnectionString": "",
    "ContainerName": "pdf-reports"
  },
  
  "ReportProcessing": {
    "EnableAutoAnalysis": true,
    "AnalysisDelaySeconds": 2,
    "MaxRetries": 3,
    "EnableOcr": false,
    "OcrLanguage": "eng"
  },
  
  "Features": {
    "EnableSignalRNotifications": true,
    "EnableAutoTagging": true,
    "EnableSentimentAnalysis": true,
    "EnableContentSummarization": true,
    "EnableFinancialReports": true
  },
  
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Information"
      }
    }
  }
}
